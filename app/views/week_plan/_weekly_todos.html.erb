<% if week_plan.todos.present? %>
  <div class="weeklyTodosScrollable">
    <ul class="weeklyTodos">
      <% week_plan.todos.reverse.each do |todo| %>
        <li class="weeklyTodo">
          <%= todo.content %>
          <%= form_with url: remove_weekly_todo_path, method: :delete do |f| %>
            <%= f.hidden_field :id, value: todo.id %>
            <div class="deleteTodoButton js--submitForm">
              <i class="fa fa-times"></i>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% else %>
  <p class="noTasks">No tasks yet.</p>
<% end %>
